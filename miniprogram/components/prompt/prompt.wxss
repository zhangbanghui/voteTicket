.prompt-box {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 7001;
    background: rgba(0,0,0,.5);
}

.prompt-content {
    position: absolute;
    left: 50%;
    top: 50%;
    width: 80%;
    max-width: 600rpx;
    border: 2rpx solid #ccc;
    border-radius: 10rpx;
    box-sizing: bordre-box;
    transform: translate(-50%,-50%);
    overflow: hidden;
    background: #fff;
}

.prompt-title {
    width: 100%;
    padding: 20rpx;
    font-size: 30rpx;
}

.prompt-input {
    margin: 20rpx 8%;
    padding: 10rpx 15rpx;
    width: 80%;
    height: 60rpx;
    border: 1px solid #ccc;
    border-radius: 10rpx;
}

.prompt-btn-group {
    display: flex;
    border-top: 1rpx solid #aaa;
}

.btn-item {
    width: 50%;
    height: 85rpx;
    line-height: 85rpx;
    background-color: #fff;
    text-align: center;
}

.prompt-certain-btn {
    color: #576b95;
}

.prompt-cancel-btn {
    color: #000;
    border-right: 1rpx solid #aaa;
    box-sizing: border-box;
}

.contentFontColor {
    color: #868686;
}