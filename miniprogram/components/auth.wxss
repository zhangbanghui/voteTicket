.auth-bd {
    background: rgba(0,0,0,.6);
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 6666;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    justify-content: space-around;
}

.auth-bd>view {
    border-radius: 15rpx;
    background: #fff;
    overflow: hidden;
    margin: 0 50rpx;
    padding: 40rpx 0;
}

.auth-bd button {
    background: orange;
    height: 88rpx;
    line-height: 88rpx;
    border-radius: 44rpx;
    margin: 0 20rpx;
    color: #fff;
}