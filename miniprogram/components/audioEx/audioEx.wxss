.audio {
    position: relative;
    width: 100%;
    height: 188rpx;
    padding: 10rpx 32rpx 52rpx;
    box-sizing: border-box;
    text-align: center;
    overflow: hidden;
    background: rgba(0,0,0,.18);
}

.audio .bg {
    position: absolute;
    top: 0;
    left: -100%;
    bottom: 0;
    right: 0;
    margin: auto;
    width: 300%;
    height: 300%;
    z-index: -1;
    filter: blur(40rpx);
}

.control-process {
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    -webkit-box-align: center;
    align-items: center;
}

.control-process .slider {
    -webkit-box-flex: 1;
    flex: 1;
}

.control-process text {
    font-size: 24rpx;
    color: #fff;
}

.audio .icon-list {
    position: relative;
    margin: 0 auto;
    line-height: 88rpx;
}

.audio .icon-list .audio-icon+.audio-icon {
    margin-left: 72rpx;
}

.icon-list .hzhicon {
    font-size: 30px;
    color: #fff;
    opacity: .7;
}

.audio .icon-list .pattern {
    position: absolute;
    right: 20rpx;
}

.audio .audio-play {
    width: 52rpx;
    height: 52rpx;
}

.audio .pattern {
    position: absolute;
    top: 0;
    bottom: 0;
    margin: auto 0;
    width: 44rpx;
    height: 44rpx;
}