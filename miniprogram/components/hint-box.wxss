.body {
    position: fixed;
    z-index: 5333;
    left: 10%;
    right: 10%;
    top: 50%;
    min-height: 200rpx;
    transform: translateY(-50%);
    opacity: 0;
    pointer-events: none;
    transition: .3s;
    border-radius: 30rpx;
    background: #fff;
    padding: 30rpx;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
}

.show_bg {
    position: fixed;
    z-index: 5332;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background: #000;
    opacity: .3;
}

.show {
    opacity: 1;
    pointer-events: auto;
}