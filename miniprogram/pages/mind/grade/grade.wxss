.top_bd {
    display: flex;
    -webkit-box-flex: 4;
    flex: 4;
    background: #f4f4f8;
    position: fixed;
    left: 0;
    right: 0;
    z-index: 10;
}

.top_bd>view {
    -webkit-box-flex: 1;
    flex: 1;
    text-align: center;
    height: 70rpx;
    line-height: 70rpx;
    opacity: .6;
}

.list_bd {
    display: flex;
    -webkit-box-flex: 4;
    flex: 4;
    border-bottom: 1px solid #f4f4f8;
}

.list_bd:last-child {
    border: none;
}

.list_bd>view {
    -webkit-box-flex: 1;
    flex: 1;
    text-align: center;
    height: 70rpx;
    line-height: 70rpx;
    opacity: .9;
}