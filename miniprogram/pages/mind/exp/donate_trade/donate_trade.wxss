.bottom_but {
    position: fixed;
    z-index: 10;
    width: 100%;
    bottom: 0;
    left: 0;
    box-shadow: 0 0 6px 2px rgba(51,51,102,.1);
}

.btn-bd {
    display: flex;
    -webkit-box-flex: 1;
    flex: 1;
}

.btn-bd>view {
    display: inline-block;
    -webkit-box-flex: 1;
    flex: 1;
    text-align: center;
    height: 58rpx;
    line-height: 58rpx;
    margin: 15rpx 10rpx;
    color: #268cdd;
    border-radius: 10rpx;
}

.public_block {
    border-bottom: 1rpx solid #f4f4f8;
}

.public_block:first-child {
    border: none;
}

.public_block>view {
    margin-bottom: 20rpx;
}

.flex_sb {
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    -webkit-box-align: center;
    align-items: center;
}